<?xml version="1.0" encoding="utf-8"?>
<com.wizarpos.payment.padui.view.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/parent_relative_layout"
    android:orientation="vertical" >
		<include
		    android:id="@+id/list_head" 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    layout="@layout/activity_manage_operator_head"/>
        <ListView
            android:layout_below="@id/list_head"
            android:id="@+id/cashier_data_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </ListView>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_btn_background_color"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/btn_prepage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_nextpage"
            android:text="上一页"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_nextpage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/btn_selector_nextpage"
            android:text="下一页"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_add_cashier"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_nextpage"
            android:text="新增"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_modify_cashierinfo"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_nextpage"
            android:text="修改"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_del_cashierinfo"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_ok"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>


</com.wizarpos.payment.padui.view.PercentRelativeLayout>