<?xml version="1.0" encoding="utf-8"?>
<com.wizarpos.payment.padui.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llNumsTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/iv7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_7" />

            <ImageButton
                android:id="@+id/iv8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_8" />

            <ImageButton
                android:id="@+id/iv9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumsMiddle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/iv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_4" />

            <ImageButton
                android:id="@+id/iv5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_5" />

            <ImageButton
                android:id="@+id/iv6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumsBtm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/iv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_1" />

            <ImageButton
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_2" />

            <ImageButton
                android:id="@+id/iv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNumsDel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/iv0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_0" />

            <ImageButton
                android:id="@+id/ivDel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/inputpad_btn_selector"
                android:src="@drawable/btn_selector_digit_del" />
        </LinearLayout>
    </LinearLayout>
</com.wizarpos.payment.padui.view.PercentLinearLayout>