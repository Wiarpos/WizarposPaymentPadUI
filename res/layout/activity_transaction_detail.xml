<?xml version="1.0" encoding="utf-8"?>
<com.wizarpos.payment.padui.view.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/c_title"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tl_ly_merchant_card_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_btn_background_color"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <Button
                android:id="@+id/btn_transaction_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_back"
                android:text="返回"
                android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_transaction_detail_prepage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_nextpage"
            android:text="上一页"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_transaction_detail_next_page"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_nextpage"
            android:text="下一页"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_transaction_detail_print"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_ok"
            android:text="打印"
            android:textColor="@android:color/white" />
    </LinearLayout>


</com.wizarpos.payment.padui.view.PercentRelativeLayout>