<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
     android:baselineAligned="false"
    android:orientation="horizontal"  >

    <LinearLayout
        android:id="@+id/LinearLayout_one"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/layout_btn_background_color"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/tv_chaier_two"
                android:textColor="@color/table_view_title_text_color" />

            <TextView
                android:id="@+id/b_input_amount"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:textColor="@color/card_query_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/yuan"
                android:textColor="@color/yuan_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/tv_reduce"
                android:textColor="@color/table_view_title_text_color" />

            <TextView
                android:id="@+id/b_reduce_amount"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@color/card_query_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/yuan"
                android:textColor="@color/yuan_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="余额："
                android:textColor="@color/table_view_title_text_color" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@color/card_query_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/yuan"
                android:textColor="@color/yuan_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/scan_card_two"
                android:textColor="@color/table_view_title_text_color" />

            <EditText
                android:id="@+id/b_pay_amount"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_input_selector"
                android:editable="false"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@color/card_query_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="@string/yuan"
                android:textColor="@color/yuan_text_color" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/b_back_btn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_selector_back"
                    android:paddingRight="10dp"
                    android:drawableLeft="@drawable/btn_icon_back"
                    android:textColor="@android:color/white"
                    android:text="@string/btn_back_cashier" />

                <Button
                    android:id="@+id/b_pay_btn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_selector_ok"
                    android:textColor="@android:color/white"
                    android:drawableLeft="@drawable/btn_icon_ok"
                    android:text="@string/tv_pay" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/LinearLayout_one"
        android:background="@color/keyboard_background_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pay_cash"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="会员券"
                android:textColor="@color/query_title_color" />

            <Button
                android:id="@+id/pay_ticket"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="scanInputForTicketNoMem"
                android:text="券扫描"
                android:textColor="@color/card_query_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_member_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/bcp_tv_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/table_view_title_text_color"
                android:textSize="32sp"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:scrollbars="none" >

                <com.wizarpos.cashier.util.NoScrollListView
                    android:id="@+id/bcp_lv_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="1dp"
                    android:scrollbars="none" >
                </com.wizarpos.cashier.util.NoScrollListView>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_no_member_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <FrameLayout
                android:id="@+id/flInputPad"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/et_ticket_mem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_selector"
                    android:editable="false"
                    android:hint="请输入券号T"
                    android:paddingLeft="5dp"
                    android:singleLine="true" />

                <requestFocus />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>