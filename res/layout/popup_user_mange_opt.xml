<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.wizarpos.pay"
    android:id="@+id/tl_ll_query_condition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/query_half_bg"
    android:gravity="center"
    android:orientation="vertical">
     <TextView
        android:id="@+id/user_manage_title_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/query_title_half_bg"
        android:gravity="center|center_vertical"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/llUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="right"
            android:text="用户名:"
            android:textColor="@color/table_view_title_text_color"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edit_input_selector"
            android:singleLine="true"
            android:textSize="28sp"
            android:numeric="integer" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="right"
            android:text="密码:"
            android:textColor="@color/table_view_title_text_color"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edit_input_selector"
            android:singleLine="true"
            android:numeric="integer"
            android:textSize="28sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="right"
            android:text="真实姓名:"
            android:textColor="@color/table_view_title_text_color"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etRealName"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edit_input_selector"
            android:singleLine="true"
            android:textSize="28sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="right"
            android:text="联系方式:"
            android:textColor="@color/table_view_title_text_color"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edit_input_selector"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="28sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llAuthrity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="right"
            android:text="权限设置:"
            android:textColor="@color/table_view_title_text_color"
            android:textSize="30sp" />

     <CheckBox
            android:id="@+id/manage_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@drawable/checkbox_selector"
            android:background="@drawable/checkbox_selector"/>
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
		 android:text="是否是管理员"
		 android:textSize="30sp"
         android:textColor="@color/table_view_title_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="取消"
            android:textColor="@color/white"
            android:background="@drawable/btn_selector_back"
            />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector_nextpage"
            android:text="确定"
          	android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>