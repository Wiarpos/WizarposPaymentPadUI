<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bcp_ll_card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="卡号："
                    android:textColor="@color/table_view_title_text_color" />

                <TextView
                    android:id="@+id/paysuccess_card_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:textColor="@color/card_query_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:text="收银："
                    android:textColor="@color/table_view_title_text_color" />

                <TextView
                    android:id="@+id/paysuccess_input_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:layout_weight="20"
                    android:paddingRight="4dp"
                    android:textColor="@color/card_query_text_color" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:text="元"
                    android:textColor="@color/yuan_text_color" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:text="扣减："
                    android:textColor="@color/table_view_title_text_color" />

                <TextView
                    android:id="@+id/paysuccess_reduce_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:layout_weight="20"
                    android:paddingRight="4dp"
                    android:textColor="@color/card_query_text_color" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:text="元"
                    android:textColor="@color/yuan_text_color" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:text="支付："
                    android:textColor="@color/table_view_title_text_color" />

                <TextView
                    android:id="@+id/paysuccess_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:layout_weight="20"
                    android:paddingRight="4dp"
                    android:textColor="@color/card_query_text_color" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:text="元"
                    android:textColor="@color/yuan_text_color" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bcp_ll_return_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/bcp_tv_return_notice"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="找零："
                    android:textColor="@color/table_view_title_text_color" />

                <TextView
                    android:id="@+id/bcp_tv_return_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:paddingRight="6dp"
                    android:text="0.00"
                    android:textColor="@color/card_query_text_color" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:text="元"
                    android:textColor="@color/yuan_text_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/paysuccess_background_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/icon_ok"
            android:text="交易成功"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>