<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 蓝色。定义当button 处于pressed 状态时的形态。 -->
    <item android:drawable="@drawable/btn_bg_blue_pressed" android:state_pressed="true"></item>
    <item android:drawable="@drawable/btn_bg_blue" android:state_window_focused="false"></item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#BBC0C0C0" android:endColor="#BBC0C0C0" />
        </shape>
    </item>

</selector>